<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtKode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtNoTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtPlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtGolongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TableCellModern" />

        <!-- AKSI -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrint"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:text="Print"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0F4C81"
            app:cornerRadius="10dp" />

    </LinearLayout>

    <!-- Divider antar baris -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_row"/>
</LinearLayout>
